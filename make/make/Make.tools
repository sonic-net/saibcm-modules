SYSNAME	:= $(shell uname -s)
HCC ?=/usr/bin/gcc
SED	= /bin/sed
COMPRESS = /usr/bin/compress
PERL    = /usr/bin/perl
LN	= /bin/ln
HOSTTYPE= i386-linux

#
# Platform Independent
#
MKTOOL	=	$(PERL) ${SDK}/tools/mktool.pl
RM	=	$(MKTOOL) -rm
MKDIR	=	$(MKTOOL) -md
FOREACH	=	$(MKTOOL) -foreach
CP	=	$(MKTOOL) -cp
MAKEDEP	=	$(MKTOOL) -dep 
ECHO	=	$(MKTOOL) -echo
MKBEEP	=	${MKTOOL} -beep
